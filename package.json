{
  "name": "@karlmarxlopez/expo-ts-and-jest",
  "description": "Expo with TypeScript and Jest",
  "version": "0.4.3",
  "license": "MIT",
  "main": "node_modules/expo/AppEntry.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "g": "plop",
    "start": "expo start",
    "start:devclient": "expo start --dev-client",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "prepare": "husky install",
    "reset:watchman": "watchman watch-del-",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand"
  },
  "dependencies": {
    "@react-native-community/netinfo": "9.3.7",
    "@react-navigation/native": "6.1.6",
    "@react-navigation/stack": "6.3.16",
    "@reduxjs/toolkit": "1.9.5",
    "@rneui/base": "4.0.0-rc.7",
    "@rneui/themed": "4.0.0-rc.7",
    "expo": "^48.0.0",
    "expo-dev-client": "~2.2.1",
    "expo-status-bar": "~1.4.4",
    "expo-updates": "~0.16.4",
    "react": "18.2.0",
    "react-devtools-core": "4.27.8",
    "react-dom": "18.2.0",
    "react-native": "0.71.8",
    "react-native-gesture-handler": "~2.9.0",
    "react-native-mmkv": "^2.5.1",
    "react-native-reanimated": "~2.14.4",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-size-matters": "0.4.0",
    "react-native-web": "~0.18.11",
    "react-native-webview": "11.26.0",
    "react-redux": "8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.6.5",
    "@react-native-community/eslint-config": "3.2.0",
    "@testing-library/jest-native": "5.4.2",
    "@testing-library/react-native": "12.1.2",
    "@types/jest": "29.5.2",
    "@types/react-test-renderer": "18",
    "babel-plugin-module-resolver": "5.0.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "cspell": "6.31.1",
    "eslint": "8",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-ft-flow": "^2.0.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-react-native-a11y": "3.3.0",
    "expo-community-flipper": "^48.0.1",
    "husky": ">=8",
    "jest": "^29.2.1",
    "jest-expo": "^48.0.0",
    "lint-staged": ">=13",
    "plop": "^3.1.2",
    "prettier": "^2.8.8",
    "react-native-flipper": "^0.198.0",
    "react-test-renderer": "18.2.0",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write",
    "*": "cspell lint --no-summary *"
  }
}
