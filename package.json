{
  "name": "@karlmarxlopez/expo-ts-and-jest",
  "description": "Expo with TypeScript and Jest",
  "version": "1.0.6",
  "license": "MIT",
  "main": "node_modules/expo/AppEntry.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "g": "plop",
    "start": "expo start",
    "start:devclient": "expo start --dev-client",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "prepare": "husky install",
    "reset:watchman": "watchman watch-del-",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand"
  },
  "dependencies": {
    "@react-native-community/netinfo": "11.1.0",
    "@react-navigation/native": "6.1.9",
    "@react-navigation/stack": "6.3.20",
    "@reduxjs/toolkit": "2.2.0",
    "@rneui/base": "4.0.0-rc.8",
    "@rneui/themed": "4.0.0-rc.8",
    "expo": "50.0.6",
    "expo-build-properties": "~0.11.1",
    "expo-dev-client": "~3.3.8",
    "expo-status-bar": "~1.11.1",
    "expo-updates": "~0.24.10",
    "react": "18.2.0",
    "react-devtools-core": "4.28.5",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "react-native-gesture-handler": "~2.14.0",
    "react-native-mmkv": "2.11.0",
    "react-native-reanimated": "~3.6.2",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-size-matters": "0.4.2",
    "react-native-web": "~0.19.6",
    "react-native-webview": "13.6.4",
    "react-redux": "9.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@commitlint/cli": "18.6.1",
    "@commitlint/config-conventional": "18.6.1",
    "@react-native-community/eslint-config": "3.2.0",
    "@testing-library/jest-native": "5.4.3",
    "@testing-library/react-native": "12.4.3",
    "@types/jest": "29.5.12",
    "@types/react-test-renderer": "18.0.7",
    "babel-plugin-module-resolver": "5.0.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "cspell": "8.3.2",
    "eslint": "8.56.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-ft-flow": "3.0.4",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react-native-a11y": "3.3.0",
    "husky": ">=8",
    "jest": "^29.7.0",
    "jest-expo": "~50.0.2",
    "lint-staged": ">=13",
    "plop": "4.0.1",
    "prettier": "3.2.5",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write",
    "*": "cspell lint --no-summary *"
  }
}
