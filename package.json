{
  "name": "@karlmarxlopez/expo-ts-and-jest",
  "description": "Expo with TypeScript and Jest",
  "version": "0.2.0",
  "license": "MIT",
  "main": "node_modules/expo/AppEntry.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "g": "plop",
    "start": "expo start",
    "start:devclient": "expo start --dev-client",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "prepare": "husky install",
    "reset:watchman": "watchman watch-del-",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand"
  },
  "dependencies": {
    "@react-native-community/netinfo": "9.3.6",
    "@react-navigation/native": "6.0.13",
    "@react-navigation/stack": "6.3.4",
    "@reduxjs/toolkit": "1.9.0",
    "@rneui/base": "4.0.0-rc.7",
    "@rneui/themed": "4.0.0-rc.7",
    "expo": "^47.0.0",
    "expo-community-flipper": "47.0.0",
    "expo-dev-client": "~2.0.0",
    "expo-status-bar": "~1.4.2",
    "react": "18.2.0",
    "react-devtools-core": "4.26.1",
    "react-dom": "18.2.0",
    "react-native": "0.70.5",
    "react-native-flipper": "^0.174.0",
    "react-native-gesture-handler": "~2.8.0",
    "react-native-mmkv": "^2.5.1",
    "react-native-reanimated": "~2.12.0",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.2",
    "react-native-size-matters": "0.4.0",
    "react-native-web": "~0.18.10",
    "react-native-webview": "11.23.1",
    "react-redux": "8.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@react-native-community/eslint-config": "3.2.0",
    "@testing-library/jest-native": "5.3.2",
    "@testing-library/react-native": "11.5.0",
    "@types/jest": "29.2.4",
    "@types/react-native": "~0.70.8",
    "@types/react-test-renderer": "18",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "cspell": "6.17.0",
    "eslint": "8",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-plugin-react-native-a11y": "3.3.0",
    "husky": ">=8",
    "jest": "^29.3.1",
    "jest-expo": "^47.0.1",
    "lint-staged": ">=13",
    "plop": "^3.1.1",
    "prettier": "^2.8.1",
    "react-test-renderer": "18.2.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,js,css,md}": "prettier --write",
    "*": "cspell lint --no-summary *"
  }
}
